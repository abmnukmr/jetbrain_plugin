<idea-plugin>
    <id>com.github.abmnukmr.jetbrainplugin</id>
    <name>jetbrain_plugin</name>
    <vendor>abmnukmr</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow factoryClass="com.github.abmnukmr.jetbrainplugin.toolWindow.MyToolWindowFactory" id="Precommit-ai"/>

        <!-- Startup Activities -->
        <postStartupActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.MyProjectActivity"/>
        <postStartupActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.CodeSuggestionActivity"/>
        <postStartupActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.PromptPopupActivity"/>

        <projectActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.MyProjectActivity"/>
        <projectActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.CodeSuggestionActivity"/>
        <projectActivity implementation="com.github.abmnukmr.jetbrainplugin.startup.PromptPopupActivity"/>

        <!-- Completion Contributor -->
        <completion.contributor
                language="ANY"
                implementationClass="com.github.abmnukmr.jetbrainplugin.intellisence.AIAutocompleteContributor"/>

        <!-- Inlay Providers -->
        <inlayProvider language="JAVA" implementationClass="com.github.abmnukmr.jetbrainplugin.hints.MyInlayHintsProvider"/>
        <inlayProvider language="JavaScript" implementationClass="com.github.abmnukmr.jetbrainplugin.hints.MyInlayHintsProvider"/>
        <inlayProvider language="TypeScript" implementationClass="com.github.abmnukmr.jetbrainplugin.hints.MyInlayHintsProvider"/>
        <inlayProvider language="Python" implementationClass="com.github.abmnukmr.jetbrainplugin.hints.MyInlayHintsProvider"/>

        <!-- Editor Factory Listener -->
        <editorFactoryListener implementation="com.github.abmnukmr.jetbrainplugin.intellisence.GhostTextEditorListener"/>
    </extensions>

    <actions>
        <action
                id="com.github.abmnukmr.EditorIllustrationAction"
                class="com.github.abmnukmr.jetbrainplugin.actions.EditorIllustrationAction"
                text="Replace Selection with 'editor_basics'"
                description="Replaces selected text with the string 'editor_basics'">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
        </action>

        <action
                id="com.github.abmnukmr.ShowMessageOverTextAction"
                class="com.github.abmnukmr.jetbrainplugin.actions.ShowMessageOverTextAction"
                text="Show Message Over Text"
                description="Replaces selected text with the string 'ShowMessageOverTextAction'">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
        </action>

        <action
                id="com.github.abmnukmr.ShowCopilotInputBoxAction"
                class="com.github.abmnukmr.jetbrainplugin.actions.ShowCopilotInputBoxAction"
                text="Show Copilot Input Box"
                description="Replaces selected text with the string 'ShowCopilotInputBoxAction'">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
        </action>

        <action
                id="GhostTextAction"
                class="com.github.abmnukmr.jetbrainplugin.actions.GhostTextAction"
                text="Insert Ghost Text"
                description="Shows ghost text inline in editor">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ENTER"/>
        </action>

        <action
                id="GhostText.AcceptAction"
                class="com.github.abmnukmr.jetbrainplugin.intellisence.AcceptGhostTextAction"
                text="Accept Ghost Text"
                description="Accept ghost text or fallback to Tab">
            <keyboard-shortcut keymap="$default" first-keystroke="TAB"/>
        </action>
    </actions>

    <applicationListeners>
        <listener
                class="com.github.abmnukmr.jetbrainplugin.listener.SelectionInputInlayListener"
                topic="com.intellij.util.messages.TopicName" />

        <listener
                class="com.github.abmnukmr.jetbrainplugin.autoCompletetion.KeySuggestionListener"
                topic="com.intellij.openapi.editor.event.EditorFactoryListener"/>
    </applicationListeners>
</idea-plugin>
